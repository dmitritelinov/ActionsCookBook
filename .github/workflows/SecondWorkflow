name: My First Workflow
on:
  push:
    branches:
      - main
  workflow_dispatch:
jobs:
  run-on-3-oses:
    name: Run on (${{ matrix.os }})
    runs-on: ${{ matrix.os }}
    strategy:
      matrix:
        os: [ubuntu-latest, macos-latest, windows-latest]
        include:
          - os: ubuntu-latest
            system: GNU Linux
          - os: macos-latest
            system: MacOS
          - os: windows-latest
            system: Windows
    steps:
      - uses: actions/checkout@v4

      - name: Hello from ${{ matrix.os }}
        run: |
          echo "Hello from ${{ matrix.system }}"
